.container
  .row
  =form_with model: @blog, local: true do |form|
    .col-sm-12
      - if @blog.errors.any?
        #error_explanation
          %h2
            = pluralize(@blog.errors.count, "error")
            prohibited
            this blog from being saved:
          %ul
            - @blog.errors.full_messages.each do |msg|
              %li= msg
      - else
        %form.form-horizontal
          .form-group
            .row
              .col-sm-2
                %label.control-label{:for => "cover", :type => "url"} Cover Image
              .col-sm-10
                %input.form-control{:name => "blog[cover]", :type => "text", :value => @blog.cover}/
          .form-group
            .row
              .col-sm-2
                %label.control-label{:for => "title"} Blog Title
              .col-sm-10
                %input.form-control{:name => "blog[title]", :type => "text", :value => @blog.title}/
          .form-group
            .row
              .col-sm-2
                %label.control-label{:for => "text"} Blog Text
              .col-sm-10
                %textarea.form-control{:name => "blog[body]"}
                  = @blog.body
          .row
            .col-sm-12
              = form.submit :class => 'btn btn-scheme-1'
